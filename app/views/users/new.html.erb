<div class="container sign-up-page">
<div class="row">
  <div class="col-xs-9 col-xs-offset-1 sign-in-box">
    <div class='front-page-box-top'>
      <img class='front-page-logo' src="http://res.cloudinary.com/efreezy/image/upload/v1445459339/expression-logo-2_krtzqz.png" alt="expression-logo" />
    </div>
    <h2>Sign Up</h2>

    <form action="<%= users_url %>" method="post">
      <%= auth_token %>

      <div class="form-group">
        <label>Username</label>
        <input name="user[username]" type="text" class="form-control username" placeholder="Username">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input name="user[password]" type="password" class="form-control password" placeholder="Password">
      </div>

      <button type="submit" class="btn btn-success sign-in-button">Sign Up</button>
      <div class="sign-up-text">Already signed up?<a href='/session/new'> Sign in here!</a></div>
    </form>


  </div>
</div>
</div>
