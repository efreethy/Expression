
<div class="row">
  <div class="col-md-4 col-md-offset-4 sign-in-box">
    <div class='front-page-box-top'>
      <img class='front-page-logo' src="expression-logo-2.png" alt="expression-logo" />
    </div>
    <h2>Sign Up</h2>

    <form action="<%= users_url %>" method="post">
      <%= auth_token %>

      <div class="form-group">
        <label>Username</label>
        <input name="user[username]" type="text" class="form-control" placeholder="Username">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input name="user[password]" type="password" class="form-control" placeholder="Password">
      </div>

      <button type="submit" class="btn btn-success">Sign Up</button>
      <div class="sign-up-text">Already signed up?<a href='/session/new'> Sign in here!</a></div>
    </form>

  </div>
</div>
